<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Signup</servlet-name>
		<servlet-class>com.servletContacts.SignupServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Signup</servlet-name>
		<url-pattern>/Registration</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.servletContacts.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.servletContacts.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>CreateCustomer</servlet-name>
		<servlet-class>com.servletContacts.CreateCustomer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateCustomer</servlet-name>
		<url-pattern>/CreateCustomer</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>UpdateCustomer</servlet-name>
		<servlet-class>com.servletContacts.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateCustomer</servlet-name>
		<url-pattern>/UpdateCustomer</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>startup.jsp</welcome-file>
	</welcome-file-list>
</web-app>
